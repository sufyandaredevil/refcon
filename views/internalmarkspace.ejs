<%- include("navbaronly"); -%>

<title>
    REFCON - New Message
</title>

<style>

    input[type=number]::-webkit-inner-spin-button, 
    input[type=number]::-webkit-outer-spin-button { 
        -webkit-appearance: none;
        }

</style>

<body>
    <div class="container" style="margin-top: 30px;">

        <a style="margin-bottom: 20px;" href="/internalmark" class="btn btn-outline-primary" role="button"><i class="fa fa-arrow-left"></i></a>

    <%if(typerror != "") {%>
        <div class="alert alert-danger"><%= typerror %></div>
    <%}%>

        <form action="/internalmarkspace" method="POST">
            <h5>New Mark Space</h5>

            <div style="margin-top: 9px;"></div>
            <label> Student's Department: </label> &nbsp;
            <input checked type="radio" name="department" value="CSE">
            <label>CSE</label>
            <input type="radio" name="department" value="IT">
            <label>IT</label>
            <input type="radio" name="department" value="CIVIL">
            <label>CIVIL</label>
            <input type="radio" name="department" value="EEE">
            <label>EEE</label>
            <input type="radio" name="department" value="ECE">
            <label>ECE</label>
            <input type="radio" name="department" value="MECH">
            <label>MECH</label>

            <div></div>
            <label> Year: </label> &nbsp;
            <input checked type="radio" name="year" value="1">
            <label> <font style="font-family: 'Times New Roman', Times, serif;">I</font> </label> &nbsp;
            <input type="radio" name="year" value="2">
            <label> <font style="font-family: 'Times New Roman', Times, serif;">II</font> </label>&nbsp;
            <input type="radio" name="year" value="3">
            <label> <font style="font-family: 'Times New Roman', Times, serif;">III</font> </label>&nbsp;
            <input type="radio" name="year" value="4">
            <label> <font style="font-family: 'Times New Roman', Times, serif;">IV</font> </label>&nbsp;
            
            <input class="form-control" maxlength="1" required type="number" min="1" max="8" name="semester" placeholder="Semester Number">
            <input class="form-control" maxlength="1" required type="number" min="1" max="3" name="internalNumber" placeholder="Internal Number">
            <input class="form-control" required type="text" name="subjectCode" placeholder="Subject Code">
            <input class="form-control" required type="text" name="subjectName" placeholder="Subject Name">
            <button style="margin-top: 7px;" class="btn btn-primary" type="submit" name="button"> Create </button>
        </form>

    </div>

</body>